<% @blog_posts.each do |blog_post| %>
  <div>
    <%# you can pass the active record as the path %>
    <h2><%= link_to blog_post.title, blog_post, class: "no-underline text-4xl" %></h2>
      <% if blog_post.draft? %>
        <div class="px-4 py-1 inline-block rounded bg-gray-100">draft</div>
      <% elsif blog_post.scheduled? %>
        <div class="px-4 py-1 inline-block rounded bg-blue-100 text-blue-900">scheduled</div>
      <% end %>
    <p><%= blog_post.body %></p>
  </div>
<% end %>
