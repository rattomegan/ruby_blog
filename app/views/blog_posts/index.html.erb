<div class="mt-12 flex justify-center">
  <div class="max-w-2xl">
    <% @blog_posts.each do |blog_post| %>
      <div class="mt-16">
        <%# you can pass the active record as the path %>
        <%= link_to blog_post.title, blog_post, class: "no-underline text-4xl" %>
          <% if blog_post.draft? %>
            <div class="published-label bg-gray-100">draft</div>
          <% elsif blog_post.scheduled? %>
            <div class="published-label bg-blue-100 text-blue-900">scheduled</div>
          <% end %>
        <div class="h-24 overflow-hidden mt-6"><%= blog_post.content %></div>
        <%= link_to "READ FULL POST...", blog_post, class: "no-underline italic inline-block mt-2" %>
      </div>
    <% end %>
  </div>
</div>

