<div class="flex justify-end px-6 mt-3">
  <div class="bg-blue-100 px-4 py-1 rounded">
    <%= link_to "Edit", edit_blog_post_path(@blog_post) if user_signed_in? %>
  </div>
</div>

<div class="flex flex-col gap-4 lg:flex-row">
  <div class="m-4 basis-1/2 flex flex-col">
    <h1 class="lg:text-right mt-3 leading-snug font-bold text-4xl lg:text-[4.2vw]"><%= @blog_post.title %></h1>
  </div>
  <div class="p-4 basis-1/2"><%= @blog_post.content %></div>
</div>